{
  "info": {
    "version": "1.0.0",
    "title": "SleekFlow Todo API"
  },
  "host": "localhost:4000",
  "definitions": {
    "ActivityFeed": {
      "description": "A list of activity feed items",
      "items": {
        "$ref": "#/definitions/ActivityFeedItem"
      },
      "title": "Activity Feed",
      "type": "array"
    },
    "ActivityFeedItem": {
      "description": "An entry in the activity feed",
      "example": {
        "details": {
          "name": "Updated Task Name",
          "status": "in_progress"
        },
        "id": "a1b2c3d4-e5f6-7890-1234-567890abcdef",
        "inserted_at": "2025-04-13T10:00:00.123456Z",
        "occurred_at": "2025-04-13T10:00:00.123456Z",
        "todo_id": "02ef07e0-eb4f-4fca-b6aa-c7993427cc10",
        "type": "todo_edited"
      },
      "properties": {
        "details": {
          "description": "Details of the activity event",
          "type": "map"
        },
        "id": {
          "description": "Unique identifier for the feed item",
          "format": "uuid",
          "type": "string"
        },
        "inserted_at": {
          "description": "Timestamp when the feed item was recorded",
          "format": "date-time",
          "type": "string"
        },
        "occurred_at": {
          "description": "Timestamp when the activity occurred",
          "format": "date-time",
          "type": "string"
        },
        "todo_id": {
          "description": "Identifier of the related TODO item",
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "description": "Type of activity (e.g., todo_added, todo_edited)",
          "type": "string"
        }
      },
      "title": "Activity Feed Item",
      "type": "object"
    },
    "Todos": {
      "description": "A collection of Todos",
      "items": {
        "$ref": "#/definitions/Todo"
      },
      "title": "Todos",
      "type": "array"
    },
    "Todo": {
      "description": "A todo item",
      "example": {
        "added_at": "2025-04-09T11:25:30.867826Z",
        "description": "description new",
        "due_date": "2025-04-14T15:28:42.596658Z",
        "id": "02ef07e0-eb4f-4fca-b6aa-c7993427cc10",
        "name": "test new",
        "priority": "high",
        "status": "in_progress",
        "tags": [
          "test1",
          "test3"
        ],
        "updated_at": "2025-04-13T07:05:25.345643Z"
      },
      "properties": {
        "added_at": {
          "description": "todo item added at",
          "type": "string"
        },
        "description": {
          "description": "todo item description",
          "type": "string"
        },
        "due_date": {
          "description": "todo item due date",
          "type": "string"
        },
        "id": {
          "description": "Unique identifier",
          "type": "string"
        },
        "name": {
          "description": "todo item name",
          "type": "string"
        },
        "priority": {
          "description": "todo item priority",
          "type": "string"
        },
        "status": {
          "description": "todo item status",
          "type": "string"
        },
        "tags": {
          "description": "todo item tags",
          "type": "array"
        },
        "updated_at": {
          "description": "todo item updated at",
          "type": "string"
        }
      },
      "required": [
        "status",
        "name",
        "id"
      ],
      "title": "Todo",
      "type": "object"
    }
  },
  "tags": [
    {
      "name": "Todos",
      "description": "Operations related to Todos"
    },
    {
      "name": "Activities",
      "description": "Operations related to Activity Feed"
    }
  ],
  "paths": {
    "/activities": {
      "get": {
        "description": "Returns a list of recent activities related to TODOs.",
        "operationId": "SleekFlowTodoWeb.ActivityFeedController.index",
        "parameters": [],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/ActivityFeed"
            }
          }
        },
        "summary": "List Activity Feed Items",
        "tags": [
          "Activities"
        ]
      }
    },
    "/todos": {
      "get": {
        "description": "Retrieve a list of all todos",
        "operationId": "SleekFlowTodoWeb.TodoController.index",
        "parameters": [
          {
            "description": "Status filter",
            "in": "query",
            "items": {
              "enum": [
                "not_started",
                "in_progress",
                "completed"
              ],
              "type": "string"
            },
            "name": "status",
            "required": false,
            "type": "array"
          },
          {
            "description": "DateTime in ISO8601",
            "in": "query",
            "name": "due_date",
            "required": false,
            "type": "string",
            "x-example": "2025-04-15T15:25:11.550132Z"
          },
          {
            "description": "Sort by",
            "in": "query",
            "name": "sort_by",
            "required": false,
            "type": "string",
            "x-example": "priority"
          },
          {
            "description": "Sort order",
            "in": "query",
            "name": "sort_order",
            "required": false,
            "type": "string",
            "x-example": "asc"
          }
        ],
        "produces": [
          [
            "application/json"
          ]
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        },
        "summary": "List all todos",
        "tags": [
          "Todos"
        ]
      },
      "post": {
        "consumes": [
          [
            "application/json"
          ]
        ],
        "description": "Add a new todo item to the list",
        "operationId": "SleekFlowTodoWeb.TodoController.create",
        "parameters": [
          {
            "description": "Todo object to create",
            "in": "body",
            "name": "todo",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Todo"
            }
          }
        ],
        "produces": [
          [
            "application/json"
          ]
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "$ref": "#/definitions/Todo"
            }
          },
          "422": {
            "description": "Unprocessable Entity"
          }
        },
        "summary": "Create a new todo",
        "tags": [
          "Todos"
        ]
      }
    },
    "/todos/:id": {
      "delete": {
        "description": "Remove a specific todo item by its ID",
        "operationId": "SleekFlowTodoWeb.TodoController.delete",
        "parameters": [
          {
            "description": "Todo ID",
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string",
            "x-example": "02ef07e0-eb4f-4fca-b6aa-c7993427cc10"
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "404": {
            "description": "Not Found"
          }
        },
        "summary": "Delete a todo",
        "tags": [
          "Todos"
        ]
      },
      "get": {
        "description": "Retrieve a specific todo item by its ID",
        "operationId": "SleekFlowTodoWeb.TodoController.show",
        "parameters": [
          {
            "description": "Todo ID",
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string",
            "x-example": "02ef07e0-eb4f-4fca-b6aa-c7993427cc10"
          }
        ],
        "produces": [
          [
            "application/json"
          ]
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Todo"
            }
          },
          "404": {
            "description": "Not Found"
          }
        },
        "summary": "Show a specific todo",
        "tags": [
          "Todos"
        ]
      },
      "put": {
        "consumes": [
          [
            "application/json"
          ]
        ],
        "description": "Update the details of a specific todo item",
        "operationId": "SleekFlowTodoWeb.TodoController.update",
        "parameters": [
          {
            "description": "Todo ID",
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string",
            "x-example": "02ef07e0-eb4f-4fca-b6aa-c7993427cc10"
          },
          {
            "description": "Todo object with updated details",
            "in": "body",
            "name": "todo",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Todo"
            }
          }
        ],
        "produces": [
          [
            "application/json"
          ]
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Todo"
            }
          },
          "404": {
            "description": "Not Found"
          },
          "422": {
            "description": "Unprocessable Entity"
          }
        },
        "summary": "Update an existing todo",
        "tags": [
          "Todos"
        ]
      }
    }
  },
  "produces": [
    "application/json"
  ],
  "consumes": [
    "application/json"
  ],
  "basePath": "/api",
  "swagger": "2.0"
}